<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blackbackground">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/space"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/coke"
            android:scaleType="fitXY" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/space"
            android:layout_toEndOf="@+id/tvRate"
            android:layout_toRightOf="@+id/tvRate"
            android:numStars="5"
            android:progressTint="@color/white"
            android:stepSize=".5" />

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="RATE: "
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/tvRate"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="PRICE: "
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/tvPrice"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="ITEM: "
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvGetPrice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/tvRate"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tvPrice"
            android:layout_toLeftOf="@id/item_image"
            android:layout_toRightOf="@id/tvPrice"
            android:layout_toStartOf="@id/item_image"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="PRICE IN HERE"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvGetItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/tvPrice"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/tvItem"
            android:layout_toLeftOf="@id/item_image"
            android:layout_toRightOf="@id/tvItem"
            android:layout_toStartOf="@id/item_image"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="ITEM DESCRIPTION HERE "
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
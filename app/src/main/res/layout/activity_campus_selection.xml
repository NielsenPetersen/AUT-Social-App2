<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.example.user1.socialappaut.CampusSelectionActivity">

    <ImageView
        android:id="@+id/btnNorthCampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/autnorth"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btnCityCampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/autcity"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/btnSouthCampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/autsouth"
        tools:ignore="ContentDescription" />

</LinearLayout>
